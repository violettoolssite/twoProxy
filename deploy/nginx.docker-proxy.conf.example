server {
    # Docker Registry 代理节点
    listen 8080 ssl http2;
    server_name DOCKER_PROXY_DOMAIN; # 例如 violetteam.cloud

    ssl_certificate     /etc/letsencrypt/live/DOCKER_PROXY_DOMAIN/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/DOCKER_PROXY_DOMAIN/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    access_log /var/log/nginx/docker-proxy-access.log;
    error_log  /var/log/nginx/docker-proxy-error.log;

    # Docker Registry API 代理
    location /v2/ {
        # 示例：腾讯云 Docker 镜像加速器
        proxy_pass https://mirror.ccs.tencentyun.com;

        proxy_set_header Host mirror.ccs.tencentyun.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_connect_timeout 60s;
        proxy_send_timeout    60s;
        proxy_read_timeout    60s;
        proxy_buffering       off;
    }

    # 健康检查
    location /health {
        return 200 'Docker Registry Proxy\nStatus: OK\n';
        add_header Content-Type text/plain;
    }

    # 根路径信息
    location = / {
        return 200 'Docker Registry Proxy on port 8080\n';
        add_header Content-Type text/plain;
    }
}


